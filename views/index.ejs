<!-- include header -->
<%- include('include/header') %>
    <!-- /include header -->

    <div class="container mt-5">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Full Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Level</th>
                    <th scope="col">Course</th>
                    <th scope="col">Gender</th>
                    <th scope="col">Status</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>


                <% for(var i=0; i < student.length; i++) {%>
                    <tr>
                        <th scope="row">
                            <%= i +1 %>
                        </th>
                        <td>
                            <%= student[i]['Student_name'] %>
                        </td>
                        <td>
                            <%= student[i]['Student_email'] %>
                        </td>
                        <td>
                            <%= student[i]['Student_level'] %>
                        </td>
                        <td>
                            <%= student[i]['Student_course'] %>
                        </td>
                        <td>
                            <%= student[i]['Student_gender'] %>
                        </td>
                        <td>
                            <%= student[i]['Student_status'] %>
                        </td>
                        <td>
                            <a class='btn' href="/update_student/<%= student[i]["_id"] %>">✏️</a>
                            <a class=' btn btn-danger' href="/delete/<%= student[i]["_id"] %>"><i class="fa-solid fa-xmark"></i></a>
                        </td>
                    </tr>

                    <% } %>

            </tbody>
        </table>
    </div>

    <h6 class="">This web application was created to fulfill Web Technology module's requirements and does not represent
        an actual company or service</h6>



<!-- include footer -->
 <%- include('include/footer') %>
    <!-- /include footer -->